rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create, read and update their own profile document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null && request.resource.id == request.auth.uid;
      
      // Allow users to read and write to their own subscription document.
      match /subscription/current {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Allow users to manage their own session documents.
      match /sessions/{sessionId} {
        allow read, create, delete: if request.auth.uid == userId;
      }
    }
  }
}
