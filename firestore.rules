rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read and write to the database.
    // The app's logic ensures that users can only access their own documents.
    // This simpler rule set avoids complex permission issues during user sign-up and login.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
