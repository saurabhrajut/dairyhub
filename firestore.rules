
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read articles, products, and tasks
    // but restrict writes to specific roles (e.g., admin, editor - not defined here but good practice)
    match /articles/{articleId} {
      allow read: if request.auth != null;
      allow write: if false; // Example: allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }

    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if false; // Example: allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if false; // Example: allow write: if resource.data.assigneeId == request.auth.uid;
    }
  }
}
