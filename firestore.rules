rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to create their own user document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow authenticated users to read or update their own data
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Allow users to manage their own subscription sub-collection
      match /subscription/{subId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
