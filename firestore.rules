
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Any authenticated user can read any user's profile
      allow read: if request.auth != null;
      
      // A user can create their own user document during sign-up
      allow create: if request.auth != null;

      // A user can only update or delete their OWN document
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /users/{userId}/subscription/{subId} {
        // Only the user can read or write to their own subscription
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
