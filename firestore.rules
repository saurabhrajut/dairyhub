rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only create and update their own profile.
    // Any authenticated user can read any other user's profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only create and update their own subscription.
    // Any authenticated user can read subscription data (e.g. for future features).
    match /subscriptions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
