rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow read/write access to a user's own documents.
      // This covers create, update, and delete operations safely.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subscription documents also inherit the owner-only rule.
      match /subscription/{subId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
