rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own subscription document.
    match /users/{userId}/subscription/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own order documents.
    match /users/{userId}/orders/{orderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own session documents.
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Explicitly deny access to any other collections by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
