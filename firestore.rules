rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to any document if the user is authenticated.
    // This is a simpler rule set to prevent permission errors during sign-up
    // and initial profile creation. The application logic ensures that
    // users can only access their own data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
