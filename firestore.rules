
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users कलेक्शन का ब्लॉक यहाँ से शुरू होता है
    match /users/{userId} {

      // यूजर के खुद के डॉक्यूमेंट के लिए नियम
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // subscription सब-कलेक्शन का ब्लॉक users ब्लॉक के अंदर है
      match /subscription/{subId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

    } // users कलेक्शन का ब्लॉक यहाँ खत्म होता है (subscription के बाद)

  }
}
