rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own subscription documents and list the collection.
    match /users/{userId}/subscription/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own order documents and list the collection.
    match /users/{userId}/orders/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // A user can read/write their own session documents and list the collection.
    match /users/{userId}/sessions/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
