rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow create if the user is authenticated and is creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow read and update only if the user is authenticated and accessing their own document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Rules for the 'subscription' sub-collection within a user document
      match /subscription/{subId} {
        // Allow read and write only if the user is authenticated and accessing their own subscription
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
