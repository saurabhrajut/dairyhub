rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read of user profiles, but only the user can write to their own document.
    // This is secure and allows the app to function correctly.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      // Subscription data can only be read and written by the owning user.
      match /subscription/{subId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
