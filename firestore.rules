rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow user to create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow user to read, update, and delete their own document
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Rules for the 'subscription' sub-collection within a user's document
      match /subscription/{subId} {
        // Allow user to read and write to their own subscription document
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
