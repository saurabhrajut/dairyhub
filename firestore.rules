rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to any document for any authenticated user.
    // This is a simpler rule set to avoid permission issues during development.
    // For production, you might want more granular rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
