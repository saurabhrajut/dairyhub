
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow user to read/write their own profile
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow user to create their own profile upon signup
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;

      // Allow authenticated users to manage their own sessions
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow authenticated users to manage their own subscription
      match /subscription/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
