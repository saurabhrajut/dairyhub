rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read and write to the users collection.
    // This is a simpler, more robust rule to prevent permission errors during sign-up
    // while still ensuring that only logged-in users can access the database.
    // The app's logic ensures users can only query their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}