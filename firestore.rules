
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document, and anyone can create a user document
    // (needed for signup). Only the user can update their own document.
    match /users/{userId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }

    // Users can read, write, and delete their own subscription documents.
    match /users/{userId}/subscription/{subId} {
      allow read, write, delete: if request.auth.uid == userId;
    }
  }
}
