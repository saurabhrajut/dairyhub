
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each user can only access their own document
    match /users/{userId} {

      // Create only your own document at id == UID
      allow create: if request.auth != null
                    && request.auth.uid == userId;

      // Read/Update/Delete only your own document
      allow read, update, delete: if request.auth != null
                                  && request.auth.uid == userId;

      // Subcollection: subscription (singular)
      match /subscription/{subId} {
        // Only the owner (same parent userId) can read/write
        allow read, write: if request.auth != null
                           && request.auth.uid == userId;
      }
    }
  }
}
